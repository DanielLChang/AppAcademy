<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
  <p>
    LOGGED IN AS: <%= current_user.email %>
  </p>
  <%= button_to "SIGN OUT", session_url, method: :delete %>
<% end %>

<% if flash[:messages] %>
  <p>
    <%= flash[:messages] %>
  </p>
<% end %>

<%= yield %>

</body>
</html>
