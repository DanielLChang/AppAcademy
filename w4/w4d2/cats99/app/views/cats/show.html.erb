<h1><%= @cat.name  %></h1>

<table>
<tr>
  <th>Birth Date</th>
  <th>Color</th>
  <th>Sex</th>
</tr>
<tr>
  <td><%= @cat.age %></td>
  <td><%= @cat.color %></td>
  <td><%= @cat.sex %></td>
</tr>
</table>

<div width="200px">
  <%= @cat.description %>
</div>

<%= link_to "Edit Cat", edit_cat_url(@cat)%>

<section>
  <%= link_to 'make a rental request', new_cat_rental_request_url %>
</section>

<section>
  <h2>Existing Rentals</h2>
  <table>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
    </tr>
    <% @cat.cat_rental_requests.each do |rentals| %>
    <tr>
      <td>
        <%= rentals.start_date %>
      </td>
      <td>
        <%= rentals.end_date %>
      </td>
      <td>
        <%= rentals.status %>
      </td>
      <% if rentals.pending? %>
        <td>
          <%= button_to "APPROVE", approve_cat_rental_request_url(rentals)%>
        </td>
        <td>
          <%= button_to "DENY", deny_cat_rental_request_url(rentals)%>
        </td>
      <% end %>
    </tr>
    <% end %>
  </table>
</section>
