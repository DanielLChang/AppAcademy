<h1>Add Cat Rental Request</h1>

<% action_url = cat_rental_requests_url %>

<form action="<%= cat_rental_requests_url %>" method="post">

  <label for="rental_id">Cat</label>
  <select id="rental_id" name="cat_rental_request[cat_id]">
    <option disabled selected>-- Select a cat --</option>
    <% Cat.all.each do |cat| %>
    <option value="<%= cat.id%>"><%= cat.name %></option>
    <% end %>
  </select>

  <br>
  <br>

  <label for="rental_start_date">Start Date</label>
  <input id="rental_start_date" type="date" name="cat_rental_request[start_date]">

  <br>

  <label for="rental_end_date">End Date</label>
  <input id="rental_end_date" type="date" name="cat_rental_request[end_date]">

  <br>
  <input type="submit" value="Make request">
</form>
